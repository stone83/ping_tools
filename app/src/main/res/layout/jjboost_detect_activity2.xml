<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/title_bg">
    <com.jj.game.boost.customview.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_heightPercent="75%sh">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <com.jj.game.boost.customview.UnderLineLinearLayout
            android:id="@+id/underline_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:line_margin_side="25dp"
            app:line_dynamic_dimen="8dp"
            android:orientation="horizontal">

        </com.jj.game.boost.customview.UnderLineLinearLayout>
    </ScrollView>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:visibility="gone">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="126dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/ignore"
            android:textColor="#39daf7"
            android:textSize="14sp" />
        <View
            android:id="@+id/cancel_line"
            android:layout_width="115dip"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#39daf7"
            android:paddingTop="5dip"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
